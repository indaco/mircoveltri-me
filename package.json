{
	"name": "mircoveltri-me",
	"version": "0.0.2",
	"private": "true",
	"type": "module",
	"scripts": {
		"build": "pnpm clean && svelte-kit sync && vite build",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"clean": "rimraf .svelte-kit build",
		"clean:all": "rimraf .svelte-kit node_modules build",
		"dev": "svelte-kit sync && vite dev",
		"format": "prettier --ignore-path .gitignore --write .",
		"lint": "prettier --ignore-path .gitignore  --check . && eslint",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@indaco/svelte-iconoir": "^7.11.1",
		"@indaco/sveo": "^1.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.25.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.16.5",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"rimraf": "^6.0.1",
		"svelte": "^5.36.13",
		"svelte-check": "^4.3.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "^7.0.5"
	},
	"packageManager": "pnpm@10.7.1"
}
