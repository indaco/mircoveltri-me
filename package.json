{
	"name": "mircoveltri-me",
	"version": "0.0.2",
	"private": "true",
	"packageManager": "pnpm@10.7.1",
	"scripts": {
		"dev": "svelte-kit sync && vite dev",
		"clean": "rimraf .svelte-kit build",
		"clean:all": "rimraf .svelte-kit node_modules build",
		"build": "npm run clean && svelte-kit sync && vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore  --check . && eslint",
		"format": "prettier --ignore-path .gitignore --write ."
	},
	"devDependencies": {
		"@indaco/svelte-iconoir": "^7.10.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.3",
		"@sveltinio/seo": "^0.4.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.1",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.13.17",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.5.0",
		"globals": "^16.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-packagejson": "2.5.10",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^6.0.1",
		"svelte": "^5.25.6",
		"svelte-check": "^4.1.5",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.1",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.29.0",
		"vite": "^6.2.4"
	},
	"type": "module"
}
